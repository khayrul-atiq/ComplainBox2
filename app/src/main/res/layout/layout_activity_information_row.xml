<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#43A047"
    android:focusableInTouchMode="false"
    android:focusable="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="@dimen/notice_ic_text_space"
        >

        <TextView
            android:id="@+id/problem_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Problem Description : "
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/problem_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Problem Category : "
            android:textColor="#ffffff"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/problem_submission_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#ffffff"
            android:text="Problem Submission Date : "
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/problem_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#ffffff"
            android:text="Current Status : "
            android:textSize="16sp"
            />

    </LinearLayout>



</LinearLayout>
