<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#78909C"
    android:focusableInTouchMode="false"
    android:focusable="false"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/notice_ic_text_space">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_application_black_24dp"
            android:tint="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/notice_ic_text_space"
            >

            <TextView
                android:id="@+id/application_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/application_form_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/application_form_uploaded_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:padding="1dp"
                android:textColor="#a3a3a3"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/notice_ic_text_space"
                android:text="Upload date : "
                />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>
